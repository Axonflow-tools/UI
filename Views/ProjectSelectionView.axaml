<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UI.ViewModels"
             x:DataType="vm:ProjectSelectionViewModel"
             xmlns:models="clr-namespace:UI.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UI.Views.ProjectSelectionView">
    
    <Design.DataContext>
        <vm:ProjectSelectionViewModel/>
    </Design.DataContext>

    <DockPanel Margin="20">
        <!-- Top row with button and search -->
        <Grid DockPanel.Dock="Top" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Content="Create New Project" 
                    Height="30"
                    Grid.Column="0"/>
                    
            <Button Content="Open File" Height="30" Grid.Column="1" Click="FileSelectionHandler"/>
                    
            <TextBox Watermark="Filter projects..." 
                    Height="30"
                    Margin="10,0,0,0"
                    Grid.Column="2"/>
        </Grid>
        
        <!-- Projects list -->
        <ItemsControl ItemsSource="{Binding Projects}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="models:Project">
                    <Border BorderBrush="#ddd" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Margin="0 5"
                            Padding="10">
                        <StackPanel Spacing="5">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="📁" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding Location, StringFormat='Location: {0}'}" 
                                       FontSize="11" Foreground="#999"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</UserControl>